{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>DateDeCreation</th>
                <th>DateDEffet</th>
                <th>DateDeFin</th>
                <th>Statut</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.titre }}</td>
                <td>{{ reservation.dateDeCreation ? reservation.dateDeCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.dateDEffet ? reservation.dateDEffet|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.dateDeFin ? reservation.dateDeFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.statut }}</td>
                <td>{{ reservation.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_reservation_crud_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('app_reservation_crud_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_crud_new') }}">Create new</a>
{% endblock %}
